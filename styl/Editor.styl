// Remove the padding from wells that contain fields
.well.fields {
	padding: 0;
}

.field {
	border-box();
	width: 100%;
	
	box-horizontal();
	padding: 0.25rem 0.625rem;

	border-top: $px solid $editor-field-border-color;
	
	&:first-child {
		border-top: none;
	}
	
	label {
		display: block;
		width: 4rem;
		padding-right: 1rem;

		color: $editor-label-text-color;
		line-height: 2.5rem;
		font-size: 1.125rem;
		font-weight: bold;
		text-align: right;
	}
	
	input,
	textarea {
		display: block;
		padding: 0.5rem;
		
		border: none;
		background: none;
		
		font-size: 1rem;
		font-family: Helvetica;
	}
	
	input {
		flex: 1;
	}
	
	textarea {
		box-sizing: border-box;

		width: 100%;
		height: 4rem;
		
		resize: none;
	}
}

.editor {
	box-vertical();
	flex: 1;
}

