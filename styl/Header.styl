.header {
	box-horizontal();
	align-items: center; // cross axis

	width: 100%;

	position: relative;
	
	box-sizing: border-box;
	
	height: $header-height;

	box-shadow: 0 2*$px 4*$px $header-shadow-color;

	border-bottom: $px solid $header-border-color;
	
	gradient($header-gradient);

	h1 {
		width: 100%;
		margin: 0;
		padding: 0;
		
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
		
		color: $header-text-color;
		font-weight: bold;
		font-size: 1.25rem;
		line-height: 3rem;
		text-align: center;
		text-shadow: 0 -1*$px 0 $header-text-shadow-color;
	}

	> div {
		// Position above heading
		position: relative;
		z-index: 2;
		
		box-horizontal();
		flex: 1;
		align-items: center; // cross axis
		
		border-box();
		
		padding: 0 0.25rem 0 0.25rem;

		&:first-child {
			justify-content: flex-start;
		}
		&:last-child {
			justify-content: flex-end;
		}

		// Header buttons have a different look
		.button,
		button {
			position: relative; // So badges can be positioned
			
			border-box();
			height: $header-button-size;

			padding: 0 0.75rem;
			margin: 0 0.25rem 0 0.25rem;

			font-size: 0.875rem;
			white-space: nowrap; // Never, ever wrap.
			line-height: $header-button-size;

			border: none;
			border-radius: 6*$px;
	
			box-shadow: inset 0 0.1em 0.1em rgba(0, 0, 0, 0.55),
						inset 0 -0.1em 0.05em rgba(0, 0, 0, 0.3),
						inset 0.1em 0 0.05em rgba(0, 0, 0, 0.2),
						inset -0.1em 0 0.05em rgba(0, 0, 0, 0.2),
						0 0.1em 0.05em rgba(255, 255, 255, 0.35);
						
			gradient($header-button-gradient);

			&:active {
				gradient($header-button-down-gradient);
			}

			&.default {
				gradient($header-button-default-gradient);
				
				&:active {
					gradient($header-button-default-down-gradient);
				}
			}
		}
	}
}
